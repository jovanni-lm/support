= form_for_filterrific @filterrific do |f|
  .search Search
  = f.text_field(:search_query, class: 'filterrific-periodically-observed')
  = f.select(:with_status_id, @filterrific.select_options[:with_status_id],
  include_blank: '- Any -')
  = f.submit 'Filter'
  = link_to('Reset filters', reset_filterrific_url, class: 'btn btn-danger')
