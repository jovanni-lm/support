%h2 Reply issue
= simple_form_for @issue do |f|
  = f.input :staff_id,
  collection: Staff.all.map { |s| [s.username, s.id] },
  input_html: { class: 'form-control' }
  = f.input :status_id,
  collection: Status.all.map { |s| [s.title, s.id] },
  include_blank: false, input_html: { class: 'form-control' }
  = f.simple_fields_for :replies, f.object.replies.build do |r|
    = r.input :answer, input_html: { class: 'form-control' }
  = f.button :submit, 'Submit', class: 'btn-primary'
